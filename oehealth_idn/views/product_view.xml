<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_template_form_view_inherit">
        <field name="name">product_template_form_view_inherit</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="product_template_categ_id"/>
                <field name="unit_ids" widget="many2many_tags" attrs="{'invisible': [('type', '!=', 'service')]}"/>
                <field name="item_type" attrs="{'invisible': [('type', '=', 'service')], 'required': [('type', '!=', 'service')]}"/>
                <field name="is_concoction"/>
            </field>
            <field name="uom_po_id" position="after">
                <label for="zat_uom" string="Alt Uom"/>
                <div>
                    <field name="zat_uom" attrs="{'invisible': [('item_type', '!=', 'Medicine')]}"/>
                    <span style="margin-right:10px"/>
                    <field name="zat_qty" attrs="{'invisible': [('item_type', '!=', 'Medicine')]}"/>
                </div>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_tree_view_inherit">
        <field name="name">product_template_tree_view_inherit</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="reordering_min_qty"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="product_normal_form_view_inherit">
        <field name="name">product_normal_form_view_inherit</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="auto_billing" groups="base.group_system"/>
                <field name="admin_fee" groups="base.group_system"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Stock Location">
                    <field name="stock_ids">
                        <tree>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="product_uom_id"/>
                            <field name="location_id"/>
                            <field name="in_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_pricelist_view_inherit">
        <field name="name">product_pricelist_view_inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <field name="discount_policy" position="after">
                <field name="attribute_value"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="product_attribute_line_tree_view">
        <field name="name">product_attribute_line_tree_view</field>
        <field name="model">product.attribute.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_tmpl_id"/>
                <field name="attribute_id"/>
            </tree>
        </field>
    </record>

    <record id="action_product_template" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_product_attribute_line" model="ir.actions.act_window">
        <field name="name">Product Attribute Line</field>
        <field name="res_model">product.attribute.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="product_attribute_price_tree_view">
        <field name="name">product_attribute_price_tree_view</field>
        <field name="model">product.attribute.price</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_tmpl_id"/>
                <field name="value_id"/>
                <field name="price_extra"/>
            </tree>
        </field>
    </record>

    <record id="action_product_attribute_price" model="ir.actions.act_window">
        <field name="name">Product Attribute Price</field>
        <field name="res_model">product.attribute.price</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="product_pricelist_item_tree_view">
        <field name="name">product_pricelist_item_tree_view</field>
        <field name="model">product.pricelist.item</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Pricelist Items">
                <field name="name" string="Applicable On"/>
                <field name="min_quantity"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="price" string="Price"/>
                <field name="base" invisible="0"/>
                <field name="sequence" invisible="0"/>
                <field name="price_discount" invisible="0"/>
                <field name="applied_on" invisible="0"/>
                <field name="compute_price" invisible="0"/>
            </tree>
        </field>
    </record>

    <record id="action_product_pricelist_item" model="ir.actions.act_window">
        <field name="name">Product Pricelist Item</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="Payment Guarantor" id="oeh_medical_conf_payment_guarantor" parent="oehealth.oeh_medical_conf_menu" sequence="3"/>


    <!-- payment.guarantor.discount -->
    <record model="ir.ui.view" id="payment_guarantor_discount_form_view">
        <field name="name">Payment Guarantor Discount Form</field>
        <field name="model">payment.guarantor.discount</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Payment Guarantor Discount">
                <!--
                <header>
                    <button name="make_active" confirm="Are you sure you want to mark insurance as Active?" states="Draft" string="Make Active" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="Draft,Active,Expired" statusbar_colors='{"Draft":"blue","Active":"red","Expired":"grey"}'/>
                </header>
                -->
                <sheet>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="payment"/>
                            <field name="company" attrs="{'invisible':[('payment','!=','Corporate')]}"/>
                            <field name="insurance_type_id" attrs="{'invisible':[('payment','!=','Insurance')]}"/>
                        </group>
                        <group>
                            <field name="general_item" />
                            <field name="medical_item"/>
                            <field name="food_item" />
                            <field name="medicine"/>
                            <field name="doctor" />
                            <field name="nurse"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="payment_guarantor_discount_tree">
        <field name="name">Payment Guarantor Discount Tree</field>
        <field name="model">payment.guarantor.discount</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string='Insurances'>
                <field name="description"/>
                <field name="payment"/>
                <field name="company" invisible="1"/>
                <field name="insurance_type_id" invisible="1"/>
                <field name="general_item" />
                <field name="medical_item"/>
                <field name="food_item" />
                <field name="medicine"/>
                <field name="doctor" />
                <field name="nurse"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_guarantor_discount_filter" model="ir.ui.view">
        <field name="name">Payment Guarantor Discount Search</field>
        <field name="model">payment.guarantor.discount</field>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <search string="Payment Guarantor Discount">
                <field name="description"/>
                <field name="payment"/>
                <field name="company"/>
                <newline />
            </search>
        </field>
    </record>

    <record id="payment_guarantor_discount_action_tree" model="ir.actions.act_window">
        <field name="name">Payment Guarantor Discount</field>
        <field name="res_model">payment.guarantor.discount</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new payment guarantor discount records.
            </p>
        </field>
    </record>

    <menuitem 
        action="payment_guarantor_discount_action_tree" 
        id="action_payment_guarantor_discount_tree" 
        parent="oeh_medical_conf_payment_guarantor" 
        sequence="1"/>

    <menuitem name="Products" id="oeh_medical_conf_product" parent="oehealth.oeh_medical_conf_menu" sequence="3"/>

    <record id="product_template_category_form_view" model="ir.ui.view">
        <field name="name">product.template.category.form</field>
        <field name="model">product.template.category</field>
        <field name="arch" type="xml">
            <form string="Pos Categories">
                <sheet>
                    <field name="image_medium" widget='image' class="oe_avatar"/>
                    <div class="oe_left">
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="sequence"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_template_category_tree_view" model="ir.ui.view">
        <field name="name">product.template.category.tree</field>
        <field name="model">product.template.category</field>
        <field name="field_parent" eval="False"/>
        <field name="arch" type="xml">
            <tree string="Product Product Categories">
                <field name="sequence" widget="handle"/>
                <field name="display_name"/>
            </tree>
        </field>
    </record>
    <record id="product_template_category_action" model="ir.actions.act_window">
        <field name="name">Product Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to define a new category.
            </p><p>
                Categories are used to browse your products through the
                touchscreen interface.
            </p><p>
                If you put a photo on the category, the layout of the
                touchscreen interface will automatically. We suggest not to put
                a photo on categories for small (1024x768) screens.
            </p>
        </field>
    </record>

    
    <menuitem id="menu_product_template_category" action="product_template_category_action" parent="oeh_medical_conf_product" sequence="1" />

</odoo>