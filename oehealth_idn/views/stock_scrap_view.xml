<odoo>
    <!-- Stock Scrap Inherit -->
    <record model="ir.ui.view" id="view_stock_scrap_form_inherit">
        <field name="name">view_stock_scrap_form_inherit</field>   
        <field name="model">stock.scrap</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
            <field name="scrap_location_id" position="after">
                <field name="unit_administration_id" />
                <field name="operating_unit_id" />
            </field>

        </field>
    </record>
    
    <record id="action_report_scrap" model="ir.actions.act_window">
        <field name="name">Scrap Report</field>
        <field name="res_model">stock.scrap</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
    </record>

    <menuitem id="ms_menu_report_scrap" action="action_report_scrap" parent="stock.menu_warehouse_report"/>
</odoo>