<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_rujukan_radiologi">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure">
                            <p>
                                <br />
                            </p>
                            <p>
                                <br />
                            </p>
                            <p>
                                <br />
                            </p>
                            <p>
                                <br />
                            </p>
                            <p>
                                <br />
                            </p>
                            <p>
                                <br />
                            </p>
                            <div class="row">
                                <div class="col-xs-8">
                                    <div>
                                        <strong>Kepada Yth,</strong>
                                        <strong>
                                            <p>Bagian Radiologi</p>
                                            <span t-field="o.unit_administration" />
                                            <br/>
                                            <span t-field="o.reference_hospital" />
                                            <br/>
                                        </strong>
                                    </div>
                                    <div>
                                        <p>
                                            <br />
                                        </p>
                                    </div>
                                    <div>
                                        <strong>Mohon dilakukan pemeriksaan : 
                                        <t t-foreach="o.evaluation_id" t-as="l">
                                             <t t-if="true == l.doctor.is_doctor">
                                                <span t-field="l.notes_complaint" />
                                            </t>
                                        </t>
                                        </strong>
                                        
                                    </div>
                                    <div>
                                        <p>
                                            <br />
                                        </p>
                                    </div>
                                    <div>
                                        <strong>Nama pasien: </strong>
                                        <span t-field="o.patient.name" />
                                    </div>
                                    <div>
                                        <strong>Tanggal Lahir:</strong>
                                        <span t-field="o.patient.dob" t-field-options='{"format": "d MMMM y"}' />
                                    </div>
                                    <div>
                                        <strong>Umur: </strong>
                                        <span t-field="o.patient.age" />
                                    </div>
                                    <div>
                                        <p>
                                            <br />
                                        </p>
                                    </div>
                                    <div>
                                        <p>Demikian, Terima Kasih</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <p style="text-align:center;"><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/> </p>
                                    <div>
                                        <p>
                                            <br />
                                        </p>
                                        <p>
                                            <br />
                                        </p>
                                    </div>
                                    <p style="text-align:center;">
                                        Dr.
                                        <span t-field="o.doctor" />
                                    </p>
                                </div>

                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>