<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cppt">
        <t t-call="report.html_container">
            <t t-call="oehealth_idn.header_unit_registration_layout">
                <div class="page">
                    <style>
                        th, td {
                            padding: 8px;
                        }
                    </style>
                    <div class="oe_structure">
                        <br/>
                        <div style="text-align:center;">
                        <span style="font-size:13px; font-weight: bold;">
                            CATATAN PERKEMBANGAN DAFTAR INSTRUKSI <br/>DAN IMPLEMENTASI PASIEN TERINTEGRASI<br/>
                            (CPPT)
                        </span>
                        </div>
                        <br/>
                        <table style="width:100%; border : 1px solid black;">
                            <tr>
                                <td>
                                    <t t-foreach="docs" t-as="o">
                                        <table style="width:100%">
                                            <tr>
                                                <td>No.RM : <span t-field="o.patient.medical_record" /></td>
                                                <td>Ruang Perawat : <span t-field="o.room_id.name" />, Kamar : <span t-field="o.class_id.name" /></td>
                                            </tr>
                                            <tr>
                                                <td>Nama Pasien : <span t-field="o.patient.name" /></td>
                                                <td>Jenis Kelamin : <span t-field="o.patient.sex" /></td>
                                            </tr>
                                                <tr>
                                                <td>Tanggal Lahir : <span t-field="o.patient.dob" t-field-options='{"format": "d MMMM y"}'/></td>
                                                <td></td>
                                            </tr>
                                        </table>
                                    </t>
                                </td>
                            </tr>
                        </table>

                        <table style="width:100%">
                            <tr>
                                <th style="border : 1px solid black;">Tgl/Jam</th>
                                <th style="border : 1px solid black;">Proposional Pemberi Asuhan (PPA)</th>
                                <th style="border : 1px solid black;">Hasil Assesment dan Pemberi Pelayanan (S.O.A.P)
                                    DPJP harus membaca seluruh rencana perawat
                                    </th>
                                <th style="border : 1px solid black;">Verifikasi DPJP (bubuhkan stempel,nama,paraf,tgl,jam)</th>
                            </tr>
                            <t t-foreach="evaluation_list" t-as="ev">
                                <tr>
                                    <td style="border : 1px solid black;"><span t-esc="ev['tanggal']" /></td>
                                    <td style="border : 1px solid black;"><span t-esc="ev['ppa']" /></td>
                                    <td style="border : 1px solid black;">
                                        S : <span t-esc="ev['S']" />
                                        <br />
                                        <br />
                                        O : 
                                        <br />
                                            BB <span t-esc="ev['O']['bb']" />
                                        <br />
                                            TB <span t-esc="ev['O']['tb']" />
                                        <br />
                                            IMT <span t-esc="ev['O']['imt']" />
                                        <br/><br />
                                        A : <span t-esc="ev['A']" />
                                        <br />
                                        <br />
                                        P : <span t-esc="ev['P']" />
                                        <br />
                                        <br />
                                        Edukasi :
                                        <br />
                                        <br />
                                        <br />
                                    </td>
                                    <td style="border : 1px solid black;"><span t-esc="ev['dpjp']" /></td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>