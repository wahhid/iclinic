<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_salinan_resep">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure">
                             <div class="row">
                                <p style="font-size:24px;text-align:center;font-weight:bold;">Salinan Resep</p>
                            </div>
                            <table style="width:100%; padding:5px;">
                                   <tr>
                                        <td>No. : <span t-field="o.name" />      Tanggal  : <span t-field="o.date" />  </td>
                                   </tr>
                                    <tr>
                                        <td>Dari Dokter :  <span t-field="o.doctor.name" /></td>
                                   </tr>
                                   <tr>
                                        <td>Dibuat Tanggal  : <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></td>
                                   </tr>  
                                   <tr>
                                        <td>Untuk  :  </td>
                                   </tr>
                            </table>
                            <h2><i>R/</i></h2> 
                            <br/>
                            
                            <table class="table table-condensed mt32">
                                <thead>
                                    <tr>
                                        <th class="text-left">Obat</th>
                                            <th class="text-center">Dosis</th>
                                            <th class="text-center">QTY</th>
                                            <th class="text-center">Duration</th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.prescription_line" t-as="s">
                                        <td class="text-left">
                                                <span t-field="s.name"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.dose"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.qty"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.duration"/>
                                            </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/><br/>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>