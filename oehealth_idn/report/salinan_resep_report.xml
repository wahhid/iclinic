<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_salinan_resep">
        <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- Header -->
                    <t t-if="not o and doc">
                        <t t-set="o" t-value="doc"/>
                    </t>
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"/>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                    <div class="header">
                        <div class="row" style="border-bottom: 1px solid black;">
                            <div class="col-xs-3">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
                            </div>
                            
                        <div class="col-xs-9" style="text-align:center;">
                            <h2><span t-field="o.pharmacy.operating_unit_id.name" /></h2> <br/>
                            <span t-field="o.pharmacy.operating_unit_id.unit_address" /><br/>
                            No. Izin Klinik : <span t-field="o.pharmacy.operating_unit_id.izin_klinik" /><br/>
                            No. Izin Apotik : <span t-field="o.pharmacy.operating_unit_id.izin_apotik" />
                        </div>
                        
                        </div>
                    </div>
                    <!-- end header -->
                    <div class="page">
                        <div class="oe_structure">
                             <div class="row">
                                <p style="font-size:24px;text-align:center;font-weight:bold;">Salinan Resep</p>
                            </div>
                            <table style="width:100%; padding:5px;">
                                   <tr>
                                        <td>No. : <span t-field="o.name" />      Tanggal  : <span t-field="o.date" />  </td>
                                   </tr>
                                    <tr>
                                        <td>Dari Dokter :  <span t-field="o.doctor.name" /></td>
                                   </tr>
                                   <tr>
                                        <td>Dibuat Tanggal  : <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></td>
                                   </tr>  
                                   <tr>
                                        <td>Untuk  :  <span t-field="o.remarks" /></td>
                                   </tr>
                            </table>
                            <h2><i>R/</i></h2> 
                            <br/>
                            
                            <table class="table table-condensed mt32">
                                <thead>
                                    <tr>
                                        <th class="text-left">Obat</th>
                                            <th class="text-left">Dosis</th>
                                            <th class="text-left">QTY</th>
                                            <th class="text-left">Frequency</th>
                                            <th class="text-left">Admin hours</th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.prescription_line" t-as="s">
                                        <td class="text-left">
                                                <span t-field="s.name"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.dose"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.qty"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.common_dosage"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.admin_times"/>
                                            </td>
                                    </tr>
                                    <t t-foreach="o.concoction_ids" t-as="cc">
                                            <tr>  
                                        <td> 
                                            Obat : <span t-field="cc.product_id.name" />
                                        </td>
                                        <td>
                                            Jumlah : <span t-field="cc.qty" />
                                        </td>
                                        <td colspan="3">
                                            Keterangan : <span t-field="cc.remark" />
                                        </td>
                                        </tr>
                                        <t t-foreach="cc.concoction_detail_ids" t-as="ccd">
                                            <tr>
                                                <td>
                                                    Obat Detail : <span t-field="ccd.product_id.name" />
                                                </td>
                                                <td>
                                                    Zat Aktif : <span t-field="ccd.zat_qty" />
                                                </td>
                                                <td colspan="3">
                                                    Qty : <span t-field="ccd.total" />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>

                                </tbody>
                            </table>
                            <br/><br/>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                        </div>
                    </div>
                </t>
        </t>
    </template>
</odoo>