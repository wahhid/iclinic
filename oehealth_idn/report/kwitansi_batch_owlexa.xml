<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_batch_owlexa_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="row">
                        <div name="invoice_address" class="col-xs-5 col-xs-offset-7">
                            <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/>
                            </span>
                        </div>
                    </div>
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-xs-2" t-if="o.trans_date">
                            <strong>Invoice Date:</strong>
                            <p t-field="o.trans_date"/>
                        </div>
                        <div class="col-xs-2 text-right">
                            <strong >Total Amount:</strong>
                            <p t-field="o.total_amount"/>
                        </div>
                        <div class="col-xs-2 text-right">
                            <strong>Total Count:</strong>
                            <p t-field="o.total_count"/>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th class="hidden">Source Document</th>
                                <th class="text-right">Claim Number</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr t-foreach="o.account_invoice_ids" t-as="l">
                                <td>
                                    <span t-field="l.number"/>
                                </td>
                                <td class="hidden">
                                    <span t-field="l.origin"/>
                                </td>
                                 <td>
                                    <span t-field="l.claim_number"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.amount_total"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.total_amount"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_invoice_batch_owlexa">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="oehealth_idn.report_invoice_batch_owlexa_document"/>
                </t>
            </t>
        </template>
    </data>
</odoo>