<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_resep">
        <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- Header -->
                    <t t-if="not o and doc">
                        <t t-set="o" t-value="doc"/>
                    </t>
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"/>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                    <div class="header">
                        <div class="row" style="border-bottom: 1px solid black;">
                            <div class="col-xs-3">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
                            </div>
                            
                        <div class="col-xs-9" style="text-align:center;">
                            <h2><span t-field="o.pharmacy.operating_unit_id.name" /></h2> <br/>
                            <span t-field="o.pharmacy.operating_unit_id.unit_address" /><br/>
                            No. Izin Klinik : <span t-field="o.pharmacy.operating_unit_id.izin_klinik" /><br/>
                            No. Izin Apotik : <span t-field="o.pharmacy.operating_unit_id.izin_apotik" />
                        </div>
                        
                        </div>
                    </div>
                    <!-- end header -->
                    <div class="page">
                        <div class="oe_structure">
                             <div class="row">
                                <p style="font-size:24px;text-align:center;font-weight:bold;">RESEP</p>
                            </div>

                            <table style="width:100%" class="center">
	<tr>
		<td class="text-right"><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></td>
	</tr>
	<tr>
		<td>Dokter : <span t-field="o.doctor.name" /></td>
	</tr>
	<tr>
		<td>
			<h2><i>R/</i>  : <span t-field="o.name" /></h2> 
            <br/><br/>
			<table class="table table-condensed mt32">
                <thead>
                    <tr>
                            <th class="text-left">Obat</th>
                            <th class="text-left">Dosis</th>
                            <th class="text-left">QTY</th>
                            <th class="text-left">Frequency</th>
                            <th class="text-left">Admin hours</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.prescription_line" t-as="s">
                            <td class="text-left">
                                <span t-field="s.name"/>
                            </td>
                            <td class="text-left">
                                <span t-field="s.dose"/> Mg
                            </td>
                            <td class="text-left">
                                <span t-field="s.qty"/>
                            </td>
                            <td class="text-left">
                                <span t-field="s.common_dosage"/>
                            </td>
                            <td class="text-left">
                                <span t-field="s.admin_times"/>
                            </td>
                    </tr>
                    <t t-foreach="o.concoction_ids" t-as="cc">
                        <tr>  
                            <td> 
                                Obat : <span t-field="cc.product_id.name" />
                            </td>
                            <td>
                                Jumlah : <span t-field="cc.qty" />
                            </td>
                            <td colspan="3">
                                Keterangan : <span t-field="cc.remark" />
                            </td>
                        </tr>
                        <t t-foreach="cc.concoction_detail_ids" t-as="ccd">
                            <tr>
                                <td>
                                    Obat Detail : <span t-field="ccd.product_id.name" />
                                </td>
                                <td>
                                    Zat Aktif : <span t-field="ccd.zat_qty" />
                                </td>
                                <td colspan="3">
                                    Keterangan : <span t-field="ccd.total" />
                                </td>
                            </tr>
                        </t>
                    </t>

                </tbody>
            </table>
		</td>
	</tr>
</table>
<br/><br/><br/>
<table style="width:80%" class="center">
	<tr>
		<td>Pro</td>
		<td> : </td>
		<td><span t-field="o.patient.name" /></td>
	</tr>
	<tr>
		<td>Umur</td>
		<td> : </td>
		<td><span t-field="o.patient.age" /></td>
	</tr>
	<tr>
		<td>Penanggung Jawab</td>
		<td> : </td>
		<td>
<t t-if="o.patient.is_have_parent == true">
	<span t-field="o.patient.name" />
</t>

</td>
	</tr>
	<tr>
		<td>NPP</td>
		<td> : </td>
		<td><t t-if="'Employe' == o.walkin.payment">
                                                <span t-field="o.walkin.employee_id.employee_number" />
                                            </t></td>
	</tr>
	<tr>
		<td>Alamat</td>
		<td> : </td>
		<td><span t-field="o.patient.street" /></td>
	</tr>
	<tr>
		<td>Kode Status</td>
		<td> : </td>
		<td><span t-field="o.walkin.detail_payment_guarantor" /></td>
	</tr>
</table>
                        </div>
                    </div>
                </t>
        </t>
    </template>
</odoo>