<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_resep">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure">
                             <div class="row">
                                <p style="font-size:24px;text-align:center;font-weight:bold;">RESEP</p>
                            </div>

                            <table style="width:100%" class="center">
	<tr>
		<td class="text-right"><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></td>
	</tr>
	<tr>
		<td>Dokter : <span t-field="o.doctor.name" /></td>
	</tr>
	<tr>
		<td>
			<h2><i>R/</i>  : <span t-field="o.name" /></h2> 
            <br/><br/>
			<table style="width:100%" class="center">
                                <thead>
                                    <tr>
                                           <th class="text-left">Obat</th>
                                            <th class="text-left">Dosis</th>
                                            <th class="text-left">QTY</th>
                                            <th class="text-left">Duration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.prescription_line" t-as="s">
                                           <td class="text-left">
                                                <span t-field="s.name"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.dose"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.qty"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.duration"/>
                                            </td>
                                    </tr>
                                </tbody>
                            </table>
		

		</td>
	</tr>
</table>
<br/><br/><br/>
<table style="width:80%" class="center">
	<tr>
		<td>Pro</td>
		<td> : </td>
		<td><span t-field="o.patient.name" /></td>
	</tr>
	<tr>
		<td>Umur</td>
		<td> : </td>
		<td><span t-field="o.patient.age" /></td>
	</tr>
	<tr>
		<td>Penanggung Jawab</td>
		<td> : </td>
		<td>
<t t-if="o.patient.is_have_parent == true">
	<span t-field="o.patient.name" />
</t>

</td>
	</tr>
	<tr>
		<td>NPP</td>
		<td> : </td>
		<td><span t-field="o.walkin.detail_payment_guarantor" /></td>
	</tr>
	<tr>
		<td>Alamat</td>
		<td> : </td>
		<td><span t-field="o.patient.street" /></td>
	</tr>
	<tr>
		<td>Kode Status</td>
		<td> : </td>
		<td><span t-field="o.patient.medical_record" /></td>
	</tr>
</table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>