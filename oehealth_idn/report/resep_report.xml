<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_resep">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure">
                             <div class="row">
                                <p style="font-size:24px;text-align:center;font-weight:bold;">RESEP</p>
                            </div>
                            <div class="row">
                                <div class="col-xs-8">
                                    <div>
                                        <strong>No. RM / No. Arrival:</strong>
                                        <p><span t-field="o.patient.medical_record"/> / <span t-field="o.name"/></p>
                                    </div>
                                    <div>
                                        <strong>No. Registrasi:</strong>
                                        <span t-field="o.reg_id.name"/>
                                    </div>
                                    <div>
                                        <strong>Nama Pasien:</strong>
                                        <span t-field="o.patient.name"/>
                                    </div>
                                    <div>
                                        <strong>Tanggal Lahir:</strong>
                                        <span t-field="o.patient.dob" t-field-options='{"format": "d MMMM y"}'/>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div>
                                        <strong>Dokter:</strong>
                                        <p><span t-field="o.doctor"/></p>
                                    </div>
                                    <div>
                                        <strong>Tanggal Masuk:</strong>
                                        <span t-field="o.date" t-field-options='{"format": "d MMMM y"}'/>
                                    </div>
                                    <div>
                                        <strong>Unit:</strong>
                                        <span t-field="o.reg_id.unit.name"/>
                                    </div>
                                    <div>
                                        <strong>No Resep:</strong>
                                        
                                    </div>
                                </div>
                            </div>
                            
                            <table class="table table-condensed mt32">
                                <thead>
                                    <tr>
                                        <th class="text-left">Obat</th>
                                            <th class="text-center">Dosis</th>
                                            <th class="text-center">QTY</th>
                                            <th class="text-center">Duration</th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.prescription_line" t-as="s">
                                        <td class="text-left">
                                                <span t-field="s.name"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.dose"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.qty"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.duration"/>
                                            </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>