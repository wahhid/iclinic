                                                    <t t-foreach='i.prescription_line' t-as='line'>
                                                        <span t-field="line.name" />,
                                                    </t>
                                                </t>
                                                <br/><br/>
                                                Tindakan :
                                                <br/>
                                                <t t-foreach='o.evaluation_id' t-as='ev'>
                                                    <span t-field="ev.notes_complaint" />,
                                                </t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>________________________________________</td>
                                        </tr>
                                        <tr>
                                            <td>Terimakasih atas bantuan dan kerjasamanya.</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <table style="width:100%">
                                                    <tr>
                                                        <t t-if="o.tipe_konsul == 'konsul1'">
                                                            <td style="border:1px solid black; width:10%;">✔</td>
                                                            <td><span t-field="o.tipe_konsul" /></td>
                                                        </t>
                                                        <t t-if="o.tipe_konsul == 'konsul2'">
                                                            <td style="border:1px solid black; width:10%;">✔</td>
                                                            <td><span t-field="o.tipe_konsul" /></td>
                                                        </t>
                                                        <t t-if="o.tipe_konsul == 'konsul3'">
                                                            <td style="border:1px solid black; width:10%;">✔</td>
                                                            <td><span t-field="o.tipe_konsul" /></td>
                                                        </t>
                                                    </tr>

