                                        <tr>
                                            <td>Saran Terapi : _______________________</td>
                                        </tr>
                                        <tr>
                                            <td>____________________________________________________</td>
                                        </tr>
                                        <tr>
                                            <td>Terimakasih atas  kerjasamanya.</td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:right;"> Kijang,<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/></td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;"> Dokter yang merawat,</td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;"><br/><br/></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;"><br/><br/></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;"> Tanda tangan dan nama lengkap</td>
                                        </tr>
                                        
                                    </table>
                                </td>
                            </tr>

                        </table>
                    </div>
                </div>
            </t>
            
        </t>
    </template>
</odoo>