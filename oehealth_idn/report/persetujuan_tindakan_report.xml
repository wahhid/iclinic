                                <thead>
                                    <tr>
                                        <th class="text-left">Pathology</th>
                                        
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.evaluation_id.diagnostic_ids" t-as="l" >
                                        <td class="text-left">
                                            <span t-field="l.product_id.name"/>
                                        </td>
                                        
                                    
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row mt32">
                                <p style="font-size:20px;text-align:left;font-weight:bold">TERAPI YANG SUDAH DI BERIKAN</p>
                            </div>
