                                    <tr>
                                        <th class="text-left">Obat</th>
                                            <th class="text-center">Dosis</th>
                                            <th class="text-center">QTY</th>
                                            <th class="text-center">Duration</th>
                                        
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.patient.prescription_line" t-as="s" >
                                        <td class="text-left">
                                                <span t-field="s.name"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.dose"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.qty"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-field="s.duration"/>
                                            </td>
                                    
                                    </tr>
                                </tbody>
                            </table>

