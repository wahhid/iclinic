<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_implementasi_keperawatan">
        <t t-call="report.html_container">
            <div class="page">
                <style>

                    th, td {
                    padding: 5px;
                    font-size:10px;
                    }
                    .border{
                        border: 1px solid black;
                    }
                </style>
                <div class="oe_structure">
                    <h2 style="text-align:center;">IMPLEMENTASI KEPERAWATAN</h2>

                    <table style="width:100%">
                        <tr class="border">
                            <td>No.RM</td>
                            <td> : </td>
                            <td><span t-esc="no_rm" /></td>
                        </tr>
                        <tr class="border">
                            <td>Nama Pasien</td>
                            <td> : </td>
                            <td><span t-esc="patient_name" /></td>
                        </tr>
                        <tr class="border">
                            <td>Tanggal Lahir </td>
                            <td> : </td>
                            <td><span t-esc="dob" /></td>
                        </tr>
                        <tr class="border">
                            <td>DPJP</td>
                            <td> : </td>
                            <td><span t-esc="doctor" /></td>
                        </tr>
                        <tr class="border">
                            <td>Ruang</td>
                            <td> : </td>
                            <td><span t-esc="bed" /></td>
                        </tr>
                    </table>
                    <br />
                    <br />
                    <br />
                    <table style="width:100%">
                        <tr>
                            <th class="border">Hari/TGL</th>
                            <th class="border">Tindakan</th>
                            <th class="border">Paraf ( Bubuhkan, Stempel, Nama, Paraf, Tanggal, Jam )</th>
                        </tr>
                        <t t-foreach="sale_order_list" t-as="order_list">
                            <tr>
                                <td class="border"><span t-esc="order_list['tanggal']" /></td>
                                <td class="border"><span t-esc="order_list['tujuan']" /></td>
                                <td class="border"><span t-esc="order_list['doctor_name']" /></td>
                            </tr>
                        </t>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>