<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_surat_keterangan">
        <div class="header">
            <div class="container" style="border-bottom: 1px solid black;">
                <table style="width:100%">
                    <tr>
                        <td style="text-align:center; padding:8px; width:15%;">
                                                
                            <!-- Multicompany -->
                            <t t-if="not o and doc">
                                <t t-set="o" t-value="doc"/>
                            </t>
                            <t t-if="o and 'company_id' in o">
                                <t t-set="company" t-value="o.company_id"/>
                            </t>
                            <t t-if="not o or not 'company_id' in o">
                                <t t-set="company" t-value="res_company"/>
                            </t>
                            <br/>
                            <img style="width:50px;height:50px;" t-if="company.logo" t-att-src="'data:image/png;base64,%s' %company.logo"/>
                            <br/>
                        </td>
                        <td style="text-align:bottom; padding:8px;">
                            <br/>
                            <t t-foreach="docs" t-as="o">
                                <h4><span t-field="o.operating_unit_id.name"/></h4>
                                <h5><span t-field="o.operating_unit_id.unit_address"/></h5>
                            </t>
                            
                        </td>
                    </tr>
                </table>  
            </div>
        </div>
        <t t-call="report.html_container">
            <div class="page">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <t t-foreach="docs" t-as="o">
                                <br/>
                                <h2 style="text-align:center;">SURAT KETERANGAN</h2>
                                <p style="text-align:center;">No.<span t-field="o.id" />/MK/SKI/<span t-field="o.name" /></p>
                                <br/>
                                <br/>
                                <table style="padding:8px;">
                                    <tr>
                                        <td style="padding:8px;">Dokter yang bertanda tangan di bawah ini menerangkan, bahwa
                                        <br/>
                                            <br/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">Nama      : <span t-field="o.patient.name" /></td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">Umur    : <span t-field="o.patient.age" /></td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">Pekerjaan/Sekolah   : <span t-field="o.patient.function" /></td>
            
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">Alamat      : <span t-field="o.patient.street" />
                                        <br/>
                                            <br/>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            Setelah diperiksa kesehatannya dalam keadaan sakit, harus istirahat selama (___________) hari
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            Terhitung Tanggal _________________ s/d_______________
                                            <br/>
                                            <br/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            Demikian surat keterangan ini dibuat untuk dipergunakan sebagaimana mestinya.
                                            <br/>
                                            <br/>
                                            <br/>
                                            
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            Kijang,<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            Pemeriksa,
                                            <br />
                                            <br />
                                            <br />
                                            <br />
                                            <br />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            ( 
                                                <t t-if="o.clinic_ids">
                                                <t t-foreach="o.clinic_ids" t-as="cl">
                                                    <t t-if="cl.doctor.is_doctor == true">
                                                        <span t-field="cl.doctor.name" />
                                                    </t>
                                                </t>
                                                </t>
                                                <t t-if="o.unit_ids">
                                                <t t-foreach="o.unit_ids" t-as="em">
                                                    <t t-if="em.doctor.is_doctor == true">
                                                        <span t-field="em.doctor.name" />
                                                    </t>
                                                </t>
                                                </t>
                                                <t t-if="o.emergency_ids">
                                                <t t-foreach="o.emergency_ids" t-as="em">
                                                    <t t-if="em.doctor.is_doctor == true">
                                                        <span t-field="em.doctor.name" />
                                                    </t>
                                                </t>
                                                </t>
                                                <t t-if="o.support_ids">
                                                <t t-foreach="o.emergency_ids" t-as="em">
                                                    <t t-if="em.doctor.is_doctor == true">
                                                        <span t-field="em.doctor.name" />
                                                    </t>
                                                </t>
                                                </t>
                                            )       
                                        </td>
                                    </tr>
                                </table>
                            </t>
                        </div>
                    </div>
                </div>
            </div> 
        </t>
    </template>
</odoo>