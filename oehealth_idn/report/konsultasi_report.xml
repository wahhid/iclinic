<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_konsultasi_rujukan">
        <t t-call="report.html_container">
            
            <t t-foreach="docs" t-as="o">
                <div class="page">
                        <div class="oe_structure">
                            <div class="row">
                                <p style="font-size:24px;text-align:center;font-weight:bold;">RUJUKAN KONSULTASI</p>
                            </div>
                            <div class="row">
                                <div class="col-xs-8">
                                    <div>
                                        <strong>No. Arrival / No. RM:</strong>
                                        <p><span t-field="o.arrival_id.name"/> / <span t-field="o.arrival_id.patient.medical_record"/></p>
                                    </div>
                                    <div>
                                        <strong>Nama pasien:</strong>
                                        <p t-field="o.arrival_id.patient.name"/>
                                    </div>
                                    <div>
                                        <strong>Tanggal Lahir:</strong>
                                        <p t-field="o.arrival_id.patient.dob" t-field-options='{"format": "d MMMM y"}'/>
                                    </div>
                                </div>

                            </div>
    
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th class="text-left">Nama Tindakan</th>
                                        <th class="text-center">Dokter</th>
                                        <th class="text-center">Tanggal</th>
                                        
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.order_line" t-as="s" >
                                        <td class="text-left">
                                            <span t-field="s.product_id"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.doctor_id"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.confirmation_date" t-field-options='{"format": "d MMMM y"}'/>
                                        </td>
                                    
                                    </tr>
                                </tbody>
                            </table>
                                <div class="row mt32">
                                <p style="font-size:20px;text-align:left;font-weight:bold">Diagnosa</p>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th class="text-left">Pathology</th>
                                        
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.reg_id.evaluation_id.diagnostic_ids" t-as="l" >
                                        <td class="text-left">
                                            <span t-field="l.product_id.name"/>
                                        </td>
                                        
                                    
                                    </tr>
                                </tbody>
                            </table>                         
                        </div>
                </div>
            </t>
            
        </t>
    </template>
</odoo>