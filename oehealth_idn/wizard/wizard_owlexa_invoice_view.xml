<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_wizard_owlexa_invoice" model="ir.ui.view">
            <field name="name">wizard.owlexa.invoice.form</field>
            <field name="model">wizard.owlexa.invoice</field>
            <field name="arch" type="xml">
                <form string="Owlexa Invoices">
                    <group>
                        <field name="account_invoice_ids" colspan="4" nolabel="1" />
                    </group>
                    <footer>
                        <button name="add_invoice" string="Add Invoices" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_owlexa_invoice" model="ir.actions.act_window">
               <field name="name">Wizard Owlexa Invoice</field>
               <field name="type">ir.actions.act_window</field>
               <field name="res_model">wizard.owlexa.invoice</field>
               <field name="view_type">form</field>
               <field name="view_mode">form</field>
               <field name="context">{}</field>
               <field name="target">new</field>
        </record>

</odoo>